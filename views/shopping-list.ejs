<h1>Shopping List</h1>
<a href="/">← Back to Weekly Plan</a>

<% if (list.length === 0) { %>
  <p>No items in your shopping list.</p>
<% } else { %>
  <ul>
    <% list.forEach(item => { %>
      <li>
        <strong><%= item.ingredient %></strong>: 
        <%= item.description %> — $<%= item.price.toFixed(2) %> 
        (for <%= new Date(item.date).toLocaleDateString() %>)
      </li>
    <% }) %>
  </ul>
<% } %>