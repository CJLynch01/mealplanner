<h1>Food Storage Inventory</h1>
<a href="/">‚Üê Back to Weekly Plan</a>

<form method="POST" action="/storage">
  <input name="name" placeholder="Item Name" required>
  <input name="quantity" type="number" step="0.01" placeholder="Qty" required>
  <input name="unit" placeholder="Unit (e.g., lbs)">
  <input name="expires" type="date">
  <input name="category" placeholder="Category">
  <button type="submit">Add Item</button>
</form>

<h2>Current Inventory</h2>
<ul>
  <% storage.forEach(item => { %>
    <li>
      <strong><%= item.name %></strong>: 
      <%= item.quantity %> <%= item.unit %>
      <% if (item.expires) { %>
        (Expires: <%= new Date(item.expires).toDateString() %>)
      <% } %>
    </li>
  <% }) %>
</ul>
