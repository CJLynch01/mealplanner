<h1>Weekly Meal Plan</h1>
<a href="/assign">Assign Meals</a> | <a href="/shopping-list">Shopping List</a> | <a href="/storage">Food Storage</a>

<div class="week-grid">
  <% week.forEach(day => { %>
    <div class="day-card">
      <h3><%= new Date(day.date).toDateString() %></h3>
      <ul>
        <% day.meals.forEach(m => { %>
          <li><strong><%= m.type.charAt(0).toUpperCase() + m.type.slice(1) %></strong>: 
            <%= m.meal || "â€”" %>
          </li>
        <% }) %>
      </ul>
    </div>
  <% }) %>
</div>